@model PagedList.IPagedList<MSIdentity.Models.Product>
@using PagedList.Mvc;




@Styles.Render("~/Content/PagedList.css")
@Styles.Render("~/Content/Site.css")
<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/architecture.js"></script>
 

</head>


@{
    ViewBag.Title = "Products";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div id="search-area" >
    <div style="margin-left: 10px;">
        <p>
            @*@Html.ActionLink("Create New", "Create")*@
        </p>
        @using (Ajax.BeginForm("Index", "Product", new AjaxOptions { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "gridContent" }))
        {

            <p>
                Product Name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                @Html.DropDownList("CategoryId", (SelectList)ViewBag.Categories, "--Select Category--", new { id = "mySelect" })
                <input type="submit" value="Search" />
            </p>

        }
    </div>
</div>
<br />
<div id="grid-area">
    <p >Total Number of records: @ViewBag.TotalNoOfRec</p>
    <br />
    @Html.Partial("_Product",Model)
</div>

